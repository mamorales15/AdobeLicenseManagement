@model AdobeLicenseManagement.Models.ServiceDeskRequest

@{
    ViewBag.Title = "Delete ServiceDesk Request";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ServiceDesk Request</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ServiceDeskRequestID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceDeskRequestID)
        </dd>

        <dt>
            Request
        </dt>
        <dd>
@if (Model.Request == null)
{
    <p>No Request associated with this ServiceDesk Request.</p>
}
else
{
            <table class="table">
                <tr>
                    <th>
                        Request ID
                    </th>
                    <th>
                        Purchase Order Number
                    </th>
                    <th>
                        VIP Name
                    </th>
                    <th>
                        License Type Description
                    </th>
                    <th>
                        Product Description
                    </th>
                    <th>
                        Point of Contact Name
                    </th>
                    <th>
                        ServiceDesk Request ID
                    </th>
                    <th>
                        End User ID
                    </th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Request.RequestID)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Request.PurchaseOrder.PurchaseOrderID)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Request.VIP.VIPName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Request.LicenseType.LicenseTypeDesc)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Request.Product.ProductDesc)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Request.PointOfContact.POCName)
                    </td>
                    <td>
                        @foreach (var sdreq in Model.Request.ServiceDeskRequests)
                        {
                            @sdreq.ServiceDeskRequestID<br />
                        }
                    </td>
                    <td>
                        @foreach (var endU in Model.Request.EndUsers)
                        {
                            @endU.UserName<br />
                        }
                    </td>
                </tr>
            </table>
}
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
