@model AdobeLicenseManagement.Models.PurchaseOrder

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PurchaseOrder</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Qty)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Qty)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PONo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PONo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PODate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PODate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Request)
        </dt>

        <dd>
            <table class="table">
                <tr>
                    <th>
                        Request ID
                    </th>
                    <th>
                        Purchase Order Number
                    </th>
                    <th>
                        VIP Name
                    </th>
                    <th>
                        License Type Description
                    </th>
                    <th>
                        Product Description
                    </th>
                    <th>
                        Point of Contact Name
                    </th>
                    <th>
                        Service Desk Request ID
                    </th>
                    <th>
                        End User ID
                    </th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Request.RequestID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Request.PurchaseOrder.PurchaseOrderID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Request.VIP.VIPName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Request.LicenseType.LicenseTypeDesc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Request.Product.ProductDesc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Request.PointOfContact.POCName)
                    </td>
                    <td>
                        @foreach (var sdreq in Model.Request.ServiceDeskRequests)
                        {
                            @sdreq.ServiceDeskRequestID<br />
                        }
                    </td>
                    <td>
                        @foreach (var endU in Model.Request.EndUsers)
                        {
                            @endU.UserName<br />
                        }
                    </td>
                </tr>
            </table>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
